<!DOCTYPE html>
<html>
  <head>
    <title>Johari Too</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class='login-body'>
    <%= render "shared/login_nav" %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
