$dark-gray: #3C4040;
$light-gray: #7C8C8E;
$turing-blue: #22C2D0;
$success: #2660A4;
$error: #9E2A2B;


// SITE WIDE FORMATTING
.container {
  width: 90%;
  margin: auto;
}

a {
  text-decoration: none;
  color: $turing-blue;
}

h3 {
  -webkit-margin-before: 2em;
  -webkit-margin-after: 0.25em;
}

.alert {
  padding: 20px;
  color: white;

  &.alert-success {
    background-color: $success;
  }

  &.alert-error {
    background-color: $error;
  }
}

// LOGIN

body.login-body {
  background-image: url('<%= image_path('background')%>');
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-color: $light-gray;
}

// NAV
nav {
  background-color: $dark-gray;
  color: $light-gray;

  .container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;

    a {
      text-decoration: none;
      color: $light-gray;
      padding: 20px;
    }
  }
}

// TABLES
table {
  border-collapse: collapse;

  th {
    background-color: $turing-blue;
    color: white;
    border: 1px solid $light-gray;
    padding: 10px;
    text-align: left;
  }

  td {
    padding: 5px 10px;
    text-align: left;
    border: 1px solid $light-gray;
  }

  .centered {
    text-align: center;
  }
}

// FORMS
form {
  width: 50%;
  color: $dark-gray;

  label {
    padding: 4px 0 0 0;

    &.form-heading {
      font-size: 1.5em;
      color: $turing-blue;
    }
  }

  .checkbox-container {
    display: flex;
    flex-align: center;
  }

  input[type=checkbox] {
    display: none;
  }

  input[type=checkbox] + label {
    background: url('<%= image_path('checkbox-unchecked')%>') left top no-repeat;
    display: block;
    min-height: 25px;
    padding-left: 40px;
  }

  input[type=checkbox]:checked + label {
    background: url('<%= image_path('checkbox-checked')%>') left top no-repeat;
  }

  input {
    width: 100%
  }

  textarea {
    width: 100%
  }

  select {
    width: 100%
  }
}
